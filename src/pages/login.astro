---

<Layout title="Login">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Sign in to your account
        </h2>
      </div>
      
      <form id="login-form" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <label for="email" class="sr-only">Email address</label>
            <input
              id="email"
              name="email"
              type="email"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
              placeholder="Email address"
            />
          </div>
          <div>
            <label for="password" class="sr-only">Password</label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm"
              placeholder="Password"
            />
          </div>
        </div>

        <div id="error-message" class="hidden text-red-600 text-sm text-center"></div>

        <div>
          <button
            type="submit"
            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            Sign in
          </button>
        </div>
      </form>

      <!-- Debug info section -->
      <div id="debug-info" class="fixed bottom-4 right-4 w-96 bg-gray-900 text-green-400 rounded-lg shadow-lg overflow-hidden z-50 cursor-move">
        <div class="flex justify-between items-center p-2 bg-gray-800 border-b border-gray-700" id="debug-header">
          <span class="font-mono font-bold">Debug Log</span>
          <div class="space-x-2">
            <button id="minimize-debug" class="text-gray-400 hover:text-white px-2">[_]</button>
            <button id="clear-debug" class="text-gray-400 hover:text-white px-2">[Ã—]</button>
          </div>
        </div>
        <div id="debug-content" class="font-mono text-xs p-4 overflow-y-auto" style="max-height: 60vh; resize: both;"></div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorMessage = document.getElementById('error-message');
  const debugInfo = document.getElementById('debug-info') as HTMLElement;
  const debugContent = document.getElementById('debug-content') as HTMLElement;
  const debugHeader = document.getElementById('debug-header') as HTMLElement;
  const clearDebugBtn = document.getElementById('clear-debug');
  const minimizeDebugBtn = document.getElementById('minimize-debug');
  let isMinimized = false;

  // Initialize debug log from localStorage
  if (debugContent && localStorage.getItem('debugLog')) {
    debugContent.innerHTML = localStorage.getItem('debugLog') || '';
    debugContent.scrollTop = debugContent.scrollHeight;
  }

  // Initialize debug window position from localStorage
  if (debugInfo) {
    const position = localStorage.getItem('debugPosition');
    if (position) {
      const { x, y } = JSON.parse(position);
      debugInfo.style.transform = `translate(${x}px, ${y}px)`;
    }
  }

  // Make debug window draggable
  let isDragging = false;
  let currentX: number;
  let currentY: number;
  let initialX: number;
  let initialY: number;
  let xOffset = 0;
  let yOffset = 0;

  debugHeader?.addEventListener('mousedown', dragStart);
  document.addEventListener('mousemove', drag);
  document.addEventListener('mouseup', dragEnd);

  function dragStart(e: MouseEvent) {
    initialX = e.clientX - xOffset;
    initialY = e.clientY - yOffset;

    if (e.target === debugHeader) {
      isDragging = true;
    }
  }

  function drag(e: MouseEvent) {
    if (isDragging) {
      e.preventDefault();
      currentX = e.clientX - initialX;
      currentY = e.clientY - initialY;
      xOffset = currentX;
      yOffset = currentY;

      if (debugInfo) {
        debugInfo.style.transform = `translate(${currentX}px, ${currentY}px)`;
        // Save position to localStorage
        localStorage.setItem('debugPosition', JSON.stringify({ x: currentX, y: currentY }));
      }
    }
  }

  function dragEnd() {
    initialX = currentX;
    initialY = currentY;
    isDragging = false;
  }

  function showError(message: string) {
    if (errorMessage) {
      errorMessage.textContent = message;
      errorMessage.classList.remove('hidden');
    }
  }

  function updateDebug(info: any) {
    if (debugContent) {
      const timestamp = new Date().toISOString();
      const newContent = `[${timestamp}] ${JSON.stringify(info, null, 2)}`;
      debugContent.innerHTML = debugContent.innerHTML 
        ? `${debugContent.innerHTML}\n\n${newContent}`
        : newContent;
      debugContent.scrollTop = debugContent.scrollHeight;
      
      // Save to localStorage
      localStorage.setItem('debugLog', debugContent.innerHTML);
    }
  }

  clearDebugBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    if (debugContent) {
      debugContent.innerHTML = '';
      localStorage.removeItem('debugLog');
    }
  });

  minimizeDebugBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    if (debugContent && debugInfo) {
      isMinimized = !isMinimized;
      if (isMinimized) {
        debugContent.style.display = 'none';
        minimizeDebugBtn.textContent = '[+]';
      } else {
        debugContent.style.display = 'block';
        minimizeDebugBtn.textContent = '[_]';
      }
      // Save state to localStorage
      localStorage.setItem('debugMinimized', isMinimized.toString());
    }
  });

  // Restore minimized state
  if (localStorage.getItem('debugMinimized') === 'true') {
    minimizeDebugBtn?.click();
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const email = formData.get('email')?.toString();
    const password = formData.get('password')?.toString();

    if (!email || !password) {
      showError('Please fill in all fields');
      updateDebug({ status: 'error', message: 'Missing required fields' });
      return;
    }

    try {
      updateDebug({ status: 'attempting', email });

      const { createClient } = await import('@supabase/supabase-js');
      
      if (!import.meta.env.PUBLIC_SUPABASE_URL || !import.meta.env.PUBLIC_SUPABASE_ANON_KEY) {
        throw new Error('Missing Supabase environment variables');
      }

      const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
      );

      // Sign in with email and password
      const { data: { session }, error: signInError } = await supabase.auth.signInWithPassword({
        email,
        password
      });

      if (signInError) {
        updateDebug({ status: 'error', error: signInError });
        throw signInError;
      }

      if (!session?.user) {
        updateDebug({ status: 'error', message: 'No session or user data' });
        throw new Error('Authentication failed');
      }

      updateDebug({ status: 'session_created', session });

      // Get user metadata to check role
      const { data: { user }, error: userError } = await supabase.auth.getUser();
      
      if (userError || !user) {
        updateDebug({ status: 'error', error: userError });
        throw userError || new Error('Failed to get user data');
      }

      updateDebug({ status: 'user_data_retrieved', metadata: user.user_metadata });

      // Check if user has admin role in metadata
      const isAdmin = user.user_metadata?.role === 'admin';
      if (!isAdmin) {
        updateDebug({ status: 'error', message: 'Not admin', metadata: user.user_metadata });
        throw new Error('Access denied: User is not an admin');
      }

      const userData = {
        id: user.id,
        email: user.email,
        role: 'admin',
        session: session.access_token
      };

      updateDebug({ status: 'success', user: userData });

      // Store user session in a cookie
      document.cookie = `user=${JSON.stringify(userData)}; path=/; max-age=86400; secure; samesite=strict`;
      
      // Redirect to admin dashboard
      window.location.href = '/admin';
    } catch (error) {
      console.error('Login error:', error);
      showError('Invalid email or password. Please check your credentials and try again.');
      updateDebug({ 
        status: 'error', 
        message: error instanceof Error ? error.message : 'Unknown error',
        error: error
      });
    }
  });
</script>